<%- include('./header') %> 
<!-- 页面主体 -->
    <div class="container post">
        <!-- 每篇文章一行 -->
        <% if (posts.length) { %>
            <% posts.forEach(element => { %>
                <%- include('./post-content', {post: element}) %> 
            <% }) %>
        <% } else { %>
        <div class="row">
            <!-- 左边头像区域 -->
            <div class="col-sm-2 hidden-xs profile"></div>
            <!-- 右边文章区域 -->
            <div class="col-xs-12 col-sm-8">
                <div class="panel panel-default">
                    <div class="panel-body text-center">尚未发表文章</div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
<%- include('./footer') %> 